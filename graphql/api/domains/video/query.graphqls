enum VideosSortField {
    ID,
    DATASOURCE_ID,
    START_TIME,
    END_TIME
}

input VideosSort {
    field: VideosSortField!
    direction: SortDirection!
}

extend type Query {
    video(string: ID): Video
    videos(filter: FilterVideoInput, first: Int! = 20, after: String, sort: [VideosSort!]! = [{field: DATASOURCE_ID, direction: ASC}, {field: ID, direction: ASC}, {field: START_TIME, direction: ASC}, {field: END_TIME, direction: ASC}]): VideoConnection
}