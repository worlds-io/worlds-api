enum TagsSortField {
    ID,
    NAME
}

input TagsSort {
    field: TagsSortField!
    direction: SortDirection!
}

extend type Query {
    tag(id: ID!): Tag
    tags(filter: FilterTagInput, first: Int! = 20, after: String, sort: [TagsSort!]! = [{field: NAME, direction: ASC}, {field: ID, direction: ASC}]): TagConnection
}