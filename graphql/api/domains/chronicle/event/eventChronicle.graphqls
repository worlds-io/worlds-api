type EventChronicle {
    id: ID!
    name: String!
    documentProducer: ChronicleDocumentProducer!
    description: String
    eventTime: DateTimeOffset!
    position: GeoJSONPoint
    timezone: String
    metadata: JSON
    validation: ChronicleDocumentValidation
    priority: String
    status: String
    labels: [String!]
    images: [Image!]!
    videos: [Video!]!
    tracks: [Track!]
    sites: [Site!]
    dataSources: [DataSource!]
    tags: [Tag!]
    pointsOfInterest: [PointOfInterest!]
    activityChronicles: [ActivityChronicle!]!
    createdAt: DateTimeOffset!
    updatedAt: DateTimeOffset!
}

# Input types for EventChronicle
input CreateEventChronicleInput {
    name: String!
    chronicleDocumentProducerId: ID!
    description: String
    startTime: DateTimeOffset!
    endTime: DateTimeOffset
    position: GeoJSONPointInput
    timezone: String
    metadata: JSON
    priority: String
    status: String
    labels: [String!]
    validation: ChronicleDocumentValidationInput
    imageIds: [ID!]
    videoIds: [ID!]
    trackIds: [ID!]
    siteIds: [ID!]
    dataSourceIds: [ID!]
    tagIds: [ID!]
    pointOfInterestIds: [ID!]
    activityChronicleIds: [ID!]!
}

input UpdateEventChronicleInput {
    name: String
    description: String
    startTime: DateTimeOffset
    endTime: DateTimeOffset
    position: GeoJSONPointInput
    timezone: String
    metadata: JSON
    priority: String
    status: String
    labels: [String!]
    validation: ChronicleDocumentValidationInput
    imageIds: [ID!]
    videoIds: [ID!]
    trackIds: [ID!]
    siteIds: [ID!]
    dataSourceIds: [ID!]
    tagIds: [ID!]
    pointOfInterestIds: [ID!]
    activityChronicleIds: [ID!]
}
