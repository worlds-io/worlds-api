enum SensorType {
	NUMBER,
	BOOLEAN,
	TEXT
}

type Sensor {
	id: ID!
	name: String!
	description: String
	type: SensorType!
	metadata: JSON
}

type Measurement {
	id:ID!
	sensor: Sensor!
	timestamp: DateTimeOffset!
	value: String!
}

input SensorInput {
	name: String!
	description: String
	type: SensorType!
	metadata: JSON
}

input MeasurementInput {
	sensorId: ID!
	timestamp: DateTimeOffset!
	value: String!
}