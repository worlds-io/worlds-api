type Zone {
	id: ID!
	dataSource: DataSource
	name: String!
	polygon: GeoJSONPolygon! 
	active: Boolean!
	
	deviceId: ID! @deprecated (reason: "deviceId is deprecated, use dataSource.id instead")
}

type ZoneEvent {
	id: ID!
	zone: Zone!
	track: Track!
	tag: String!
	type: ActivityType!
	startTime: DateTimeOffset!
	endTime: DateTimeOffset
	polygon: GeoJSONMultiPolygon
}
 