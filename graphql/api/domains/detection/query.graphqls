enum DetectionsSortField {
	TIMESTAMP,
	GLOBAL_TRACK_ID
}

input DetectionsSort {
	field: DetectionsSortField!,
	direction: SortDirection!
}

extend type Query {
	detections(filter: FilterDetectionInput, first: Int, after: String, sorts: [DetectionsSort!] = [{field: TIMESTAMP, direction: ASC}, {field: GLOBAL_TRACK_ID, direction: ASC}]): DetectionConnection
}

